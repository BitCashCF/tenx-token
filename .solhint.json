{
  "rules": {
    "reentrancy": "error",
    "avoid-sha3": "error",
    "avoid-suicide": "error",
    "avoid-throw": "error",
    "func-visibility": "warn",
    "state-visibility": "warn",
    "check-send-result": "warn",
    "avoid-call-value": "warn",
    "compiler-fixed": "error",
    "compiler-gt-0_4": "error",    
    "no-complex-fallback": "warn",
    "mark-callable-contracts": false,
    "multiple-sends": "warn",
    "avoid-tx-origin": "error",
    "no-inline-assembly": "warn",
    "not-rely-on-block-hash": "warn",
    "not-rely-on-time": false,
    "avoid-low-level-calls": "warn",
    "func-name-mixedcase": "warn",
    "func-param-name-mixedcase": "warn",
    "var-name-mixedcase": "warn",
    "event-name-camelcase": "warn",
    "const-name-snakecase": "warn",
    "modifier-name-mixedcase": "warn",
    "contract-name-camelcase": false,
    "use-forbidden-name": "warn",
    "visibility-modifier-order": "warn",
    "imports-on-top": "error",
    "two-lines-top-level-separator": "warn",
    "func-order": "warn",
    "quotes": "warn",
    "no-mix-tabs-and-spaces": "warn",
    "indent": ["warn", 4],
    "bracket-align": "warn",
    "array-declaration-spaces": "warn",
    "separate-by-one-line-in-contract": "warn",
    "expression-indent": "warn",
    "statement-indent": "warn",
    "space-after-comma": "warn",
    "no-spaces-before-semicolon": "warn",
    "max-line-length": 150,
    "payable-fallback": "warn",
    "no-empty-blocks": false,
    "no-simple-event-func-name": false,
    "no-unused-vars": "warn"
  }
}